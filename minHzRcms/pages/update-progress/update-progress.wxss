/* pages/update-progress/update-progress.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.form-header {
  background-color: #fff;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.form-content {
  flex: 1;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}

/* 项目信息 */
.project-info-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.project-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.project-status {
  font-size: 26rpx;
  color: #666;
}

/* 表单项目 */
.form-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4757;
}

/* 进度输入 */
.progress-input-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
  background-color: #fff;
  text-align: center;
}

.progress-input:focus {
  border-color: #007AFF;
}

.progress-unit {
  font-size: 32rpx;
  font-weight: 600;
  color: #007AFF;
  min-width: 40rpx;
}

.progress-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
  text-align: center;
}

.hint-text {
  color: #666;
  font-size: 22rpx;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
  resize: none;
}

.form-textarea:focus {
  border-color: #007AFF;
  background-color: #fff;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 底部操作按钮 */
.form-actions {
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn {
  background-color: #007AFF;
  color: #fff;
  border: none;
}

.submit-btn:active {
  background-color: #0056b3;
} 