/* pages/daily-weekly-report/daily-weekly-report.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.new-report-btn {
  background-color: #007AFF;
  color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 头部区域：标签页和新建按钮 */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

/* 标签页 */
.tab-bar {
  display: flex;
  background-color: transparent;
  padding: 0;
  border-bottom: none;
}

.tab {
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  margin-right: 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.tab.active {
  color: #007AFF;
  font-weight: 500;
  background-color: #f0f8ff;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 3rpx;
  background-color: #007AFF;
  border-radius: 2rpx;
}

.new-report-btn {
  background-color: #007AFF;
  color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* 报告列表 */
.report-list {
  padding: 20rpx 30rpx;
}

.report-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.report-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.report-date {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.report-type {
  font-size: 20rpx;
  font-weight: 400;
  color: #666;
}

.report-department {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.report-summary {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.report-engagement {
  display: flex;
  gap: 30rpx;
}

.engagement-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.icon {
  font-size: 24rpx;
}

.count {
  font-size: 24rpx;
  color: #666;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 16rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.radio-group {
  display: flex;
  gap: 20rpx;
}

.radio {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.radio.active {
  border-color: #007AFF;
  background-color: #f0f8ff;
  color: #007AFF;
}

.input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  resize: none;
  line-height: 1.4;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel, .btn-submit {
  flex: 1;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-submit {
  background-color: #007AFF;
  color: #fff;
}
