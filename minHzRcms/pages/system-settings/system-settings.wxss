/* pages/system-settings/system-settings.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 设置列表 */
.settings-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 100rpx;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.setting-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
  line-height: 1.4;
}

.setting-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 开关样式 */
.setting-switch {
  transform: scale(0.8);
  margin-left: 20rpx;
}

/* 字体选择器 */
.font-picker {
  min-width: 120rpx;
  margin-left: 20rpx;
}

.picker-text {
  background-color: #f8f9fa;
  color: #007AFF;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  border: 2rpx solid #007AFF;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 箭头 */
.setting-arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
  margin-left: 20rpx;
}

/* 退出登录 */
.logout-section {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.logout-btn {
  width: 100%;
  background-color: #dc3545;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn:active {
  background-color: #c82333;
} 