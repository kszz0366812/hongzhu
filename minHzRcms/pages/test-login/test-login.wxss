/* pages/test-login/test-login.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 信息区域 */
.info-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
}

.info-item .value {
  font-size: 28rpx;
  font-weight: bold;
}

.info-item .value.dev {
  color: #007AFF;
}

.info-item .value.prod {
  color: #34C759;
}

.info-item .value.success {
  color: #07c160;
}

.info-item .value.error {
  color: #ff4d4f;
}

/* 用户信息区域 */
.user-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.gender {
  font-size: 24rpx;
  color: #999;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

/* 操作区域 */
.action-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.btn {
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-debug {
  background: linear-gradient(135deg, #6c5ce7, #a29bfe);
  color: white;
}

.btn-primary {
  background: linear-gradient(135deg, #007AFF, #0056CC);
  color: white;
}

.btn-secondary {
  background: linear-gradient(135deg, #34C759, #28A745);
  color: white;
}

.btn-success {
  background: linear-gradient(135deg, #FF9500, #FF6B00);
  color: white;
}

.btn-danger {
  background: linear-gradient(135deg, #FF3B30, #DC3545);
  color: white;
}

/* 日志区域 */
.log-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.clear-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.log-content {
  height: 400rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.log-item {
  margin-bottom: 10rpx;
  padding: 10rpx;
  background: white;
  border-radius: 6rpx;
  border-left: 4rpx solid #007AFF;
}

.log-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.4;
  word-break: break-all;
}

.no-logs {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
} 

/* 测试结果区域 */
.test-result {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
} 