/* pages/personal-info/personal-info.wxss */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 登录状态 */
.login-status {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-item {
  display: flex;
  align-items: center;
}

.status-item .label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.status-item .value {
  font-size: 28rpx;
  font-weight: bold;
}

.status-item .value.success {
  color: #07c160;
}

.status-item .value.error {
  color: #ff4d4f;
}

/* 用户信息 */
.user-info {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.avatar-info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.gender {
  font-size: 24rpx;
  color: #999;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
  min-width: 120rpx;
  margin-right: 20rpx;
}

.info-item .value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 空状态 */
.no-user-info {
  background: white;
  border-radius: 12rpx;
  padding: 60rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-state {
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  display: block;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
  display: block;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: linear-gradient(135deg, #007AFF, #0056CC);
  color: white;
}

.btn-primary:active {
  background: linear-gradient(135deg, #0056CC, #003D99);
}

.btn-secondary {
  background: linear-gradient(135deg, #34C759, #28A745);
  color: white;
}

.btn-secondary:active {
  background: linear-gradient(135deg, #28A745, #1E7E34);
}

.btn-danger {
  background: linear-gradient(135deg, #FF3B30, #DC3545);
  color: white;
}

.btn-danger:active {
  background: linear-gradient(135deg, #DC3545, #C82333);
}

.btn[disabled] {
  background: #f0f0f0 !important;
  color: #999 !important;
}

/* 说明文字 */
.tips {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tip-text {
  font-size: 26rpx;
  color: #999;
  display: block;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.tip-text:last-child {
  margin-bottom: 0;
} 