/* pages/edit-project/edit-project.wxss */
.container {
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.input:focus {
  border-color: #007AFF;
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  resize: none;
  line-height: 1.4;
}

.picker {
  width: 100%;
}

.picker-text {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.picker-text.placeholder {
  color: #999;
}

/* 附件上传样式 */
.attachment-section {
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #fafafa;
}

.attachment-list {
  margin-bottom: 20rpx;
}

.attachment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #e0e0e0;
}

.attachment-item:last-child {
  margin-bottom: 0;
}

.attachment-info {
  flex: 1;
}

.attachment-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.attachment-size {
  font-size: 22rpx;
  color: #999;
}

.remove-attachment {
  font-size: 32rpx;
  color: #ff6b6b;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #fff5f5;
}

.upload-btn {
  width: 100%;
  background-color: #fff;
  border: 2rpx dashed #007AFF;
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #007AFF;
  font-size: 28rpx;
  transition: all 0.3s ease;
  box-sizing: border-box;
  overflow: hidden;
  min-height: 80rpx;
}

.upload-btn:active {
  background-color: #f0f8ff;
  border-color: #0056b3;
  color: #0056b3;
}

.upload-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.upload-text {
  font-size: 28rpx;
  white-space: nowrap;
}

/* 按钮区域 */
.button-section {
  margin-bottom: 30rpx;
}

.submit-btn {
  width: 100%;
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  background-color: #0056b3;
} 

/* 必填字段标记 */
.required {
  color: #dc3545;
  font-weight: bold;
}

 

.members-section {
  margin-top: 16rpx;
}

.invited-members {
  margin-bottom: 24rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #e9ecef;
}

.member-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
  overflow: hidden;
  position: relative;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.member-info {
  flex: 1;
  margin-right: 16rpx;
}

.member-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.member-role {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.remove-member {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff4757;
  color: #fff;
  border-radius: 50%;
  position: relative;
  flex-shrink: 0;
  line-height: 1;
  text-align: center;
  padding: 0;
  margin: 0;
}

.remove-member::after {
  content: '×';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
  line-height: 1;
}

.invite-section {
  margin-top: 16rpx;
}

.invite-btn {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border: 2rpx dashed #007AFF;
  border-radius: 8rpx;
  color: #007AFF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.invite-btn:active {
  background-color: #f0f8ff;
}

.invite-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.invite-text {
  font-weight: 500;
} 