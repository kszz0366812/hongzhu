/* pages/project/project.wxss */
.container {
  min-height: 100vh;
  background-color: #f0f0f0;
  padding: 20rpx;
}

/* 统计信息 */
.stats-section {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stats-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stats-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #007AFF;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 22rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  width: 100%;
}

/* 创建按钮样式 */
.create-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.create-btn.primary {
  background-color: #007AFF;
  color: #fff;
  border: 2rpx solid #007AFF;
}

.create-btn.secondary {
  background-color: #fff;
  color: #007AFF;
  border: 2rpx solid #007AFF;
}

.create-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 标签页 */
.tabs-section {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background-color: #007AFF;
  color: #fff;
  font-weight: 500;
}

.tab-item:active {
  opacity: 0.8;
}



.project-list {
  margin-bottom: 30rpx;
}

.project-item {
  background-color: #fafafa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 1rpx solid #e8e8e8;
}



.project-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.project-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.project-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.project-status.ongoing {
  background-color: #cce5ff;
  color: #004085;
}

.project-status.completed {
  background-color: #d4edda;
  color: #155724;
}

.project-status.pending {
  background-color: #f8d7da;
  color: #721c24;
}

.project-status.overdue {
  background-color: #f8d7da;
  color: #721c24;
}

/* 项目信息 */
.project-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  min-height: 40rpx;
  align-items: center;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
  line-height: 1.4;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

/* 项目进度 */
.project-progress {
  margin-bottom: 20rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
  align-items: center;
}

.progress-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.progress-bar {
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #007AFF, #28a745);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 附件列表 */
.attachments-section {
  margin-bottom: 20rpx;
}

.attachments-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.attachments-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.attachment-tag {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 6rpx 12rpx;
  font-size: 22rpx;
  color: #666;
}

.attachment-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

.attachment-name {
  max-width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 项目操作 */
.project-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  color: #333;
  padding: 0 16rpx;
  min-height: 64rpx;
  box-sizing: border-box;
  overflow: hidden;
  flex-shrink: 0;
  white-space: nowrap;
}

.action-btn:active {
  background-color: #f5f5f5;
}

.action-btn.status-btn {
  background-color: #007AFF;
  color: #fff;
  border-color: #007AFF;
}

.action-btn.delete {
  color: #ff4757;
  border-color: #ff4757;
  background-color: transparent;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 编辑表单样式 */
.edit-form-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.edit-form-container {
  background-color: #fff;
  border-radius: 16rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  position: relative;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.close-btn:active {
  background-color: #eee;
}

.form-content {
  padding: 30rpx;
  max-height: 60vh;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  min-height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-sizing: border-box;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.form-input:focus {
  border-color: #007AFF;
}

.form-textarea {
  width: 100%;
  height: 120rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-sizing: border-box;
  resize: none;
  line-height: 1.4;
}

.form-textarea:focus {
  border-color: #007AFF;
}

.picker-input {
  width: 100%;
  min-height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 24rpx 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  color: #333;
  box-sizing: border-box;
  line-height: 1.4;
}

.picker-input:active {
  border-color: #007AFF;
}

/* 附件上传样式 */
.attachment-section {
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #fafafa;
}

.attachment-list {
  margin-bottom: 20rpx;
}

.attachment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #e0e0e0;
}

.attachment-item:last-child {
  margin-bottom: 0;
}

.attachment-info {
  flex: 1;
}

.attachment-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.attachment-size {
  font-size: 22rpx;
  color: #999;
}

.remove-attachment {
  font-size: 32rpx;
  color: #ff6b6b;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #fff5f5;
}

.upload-btn {
  width: 100%;
  background-color: #fff;
  border: 2rpx dashed #007AFF;
  border-radius: 8rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #007AFF;
  font-size: 26rpx;
}

.upload-btn:active {
  background-color: #f0f8ff;
}

.upload-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.form-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn:active {
  background-color: #eee;
}

.save-btn {
  flex: 1;
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  opacity: 0.8;
}

.project-members {
  margin: 24rpx 0;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.members-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
}

.members-title-section {
  display: flex;
  align-items: center;
}

.members-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.members-count {
  font-size: 22rpx;
  color: #666;
  margin-left: 8rpx;
}

.expand-icon {
  font-size: 20rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.members-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
  /* 默认不展开，高度为0 */
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.members-grid.expanded {
  /* 展开时显示所有行，设置足够大的高度 */
  max-height: 300rpx;
}

.member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 80rpx;
  height: 90rpx;
  justify-content: flex-start;
  flex-shrink: 0;
}

.member-avatar {
  width: 48rpx;
  height: 48rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-bottom: 6rpx;
  flex-shrink: 0;
  border: 1rpx solid #e0e0e0;
}

.member-name {
  font-size: 18rpx;
  color: #888;
  line-height: 1.2;
  max-width: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 0rpx;
  transform: scale(0.9);
  transform-origin: center;
  height: 24rpx;
  display: block;
}

.more-members {
  opacity: 0.8;
}

.more-avatar {
  background-color: #e0e0e0 !important;
  color: #999 !important;
  font-size: 20rpx !important;
}

.project-content {
  cursor: pointer;
  transition: all 0.2s ease;
  border-radius: 8rpx;
  padding: 8rpx;
  position: relative;
  z-index: 10;
}

.project-content:active {
  background-color: #e0e0e0;
  transform: scale(0.98);
}

.project-content:hover {
  background-color: #f5f5f5;
}

.project-title-row {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.project-title-section {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
  flex: 1;
}

.project-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.project-level-label {
  font-size: 20rpx;
  color: #fff;
  margin-left: 8rpx;
  padding: 3rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 400;
  opacity: 0.7;
  filter: grayscale(20%);
}

.project-level-label.long-term {
  background-color: #6c757d;
}

.project-level-label.urgent {
  background-color: #dc3545;
}

.project-level-label.important {
  background-color: #fd7e14;
}

.project-level-label.normal {
  background-color: #28a745;
}

.project-status-label {
  font-size: 20rpx;
  font-weight: 400;
  color: #666;
}
