/* pages/create-report/create-report.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  gap: 20rpx;
  width: 100%;
  justify-content: center;
  margin: 0 auto;
}

.radio {
  flex: 1;
  text-align: center;
  padding: 20rpx 40rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  max-width: 200rpx;
}

.radio.active {
  border-color: #007AFF;
  background-color: #f0f8ff;
  color: #007AFF;
  font-weight: 500;
}

.input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.input:focus {
  border-color: #007AFF;
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  resize: none;
  line-height: 1.4;
}

/* 工作内容和下一步计划区域设置为5行 */
.content-textarea,
.plan-textarea {
  height: 150rpx; /* 约5行的高度 */
}

/* 遇到的问题区域设置为较短高度 */
.issues-textarea {
  height: 120rpx; /* 约2-3行的高度 */
}

.picker {
  width: 100%;
}

.picker-text {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.picker-text.placeholder {
  color: #999;
}

/* 按钮区域 */
.button-section {
  margin-bottom: 30rpx;
}

.submit-btn {
  width: 100%;
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  background-color: #0056b3;
}

/* 预览区域 */
.preview-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 部门列表 */
.department-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.department-item {
  padding: 16rpx 24rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.department-item:active {
  border-color: #007AFF;
  background-color: #f0f8ff;
}

.department-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 附件区域 */
.attachment-section {
  border: 2rpx dashed #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  background-color: #fafafa;
}

.attachment-list {
  margin-bottom: 20rpx;
}

.attachment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #e0e0e0;
}

.attachment-item:last-child {
  margin-bottom: 0;
}

.attachment-info {
  flex: 1;
}

.attachment-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.attachment-size {
  font-size: 22rpx;
  color: #999;
}

.remove-attachment {
  font-size: 32rpx;
  color: #ff6b6b;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #fff5f5;
}

.upload-btn {
  width: 100%;
  background-color: #fff;
  border: 2rpx dashed #007AFF;
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #007AFF;
  font-size: 28rpx;
  transition: all 0.3s ease;
  box-sizing: border-box;
  overflow: hidden;
  min-height: 80rpx;
}

.upload-btn:active {
  background-color: #f0f8ff;
  border-color: #0056b3;
  color: #0056b3;
}

.upload-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.upload-text {
  font-size: 28rpx;
  white-space: nowrap;
}

/* 必填字段标记 */
.required {
  color: #dc3545;
  font-weight: bold;
} 