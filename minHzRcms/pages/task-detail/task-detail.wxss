/* pages/task-detail/task-detail.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 任务详情内容 */
.task-detail {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 任务头部 */
.task-header {
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.task-meta {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-pending {
  background-color: #fff7e6;
  color: #faad14;
}

.status-running {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.task-priority {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.priority-high {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.priority-medium {
  background-color: #fff7e6;
  color: #faad14;
}

.priority-low {
  background-color: #f6ffed;
  color: #52c41a;
}

/* 任务信息 */
.task-info {
  padding: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.info-item .value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  max-width: 60%;
}

.info-item .value.overdue {
  color: #ff4d4f;
  font-weight: 500;
}

/* 任务描述 */
.task-description {
  padding: 0 30rpx 30rpx;
}

.description-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.description-content {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
  min-height: 80rpx;
  max-height: 400rpx;
  overflow-y: auto;
}

/* 附件区域 */
.attachments-section {
  padding: 0 30rpx 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.attachment-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attachment-item {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 20rpx;
  transition: all 0.2s ease;
}

.attachment-item:hover {
  background-color: #e9ecef;
  border-color: #1890ff;
}

.attachment-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #1890ff;
}

.attachment-info {
  flex: 1;
  min-width: 0;
}

.attachment-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
  word-wrap: break-word;
  word-break: break-all;
  line-height: 1.4;
}

.attachment-size {
  font-size: 24rpx;
  color: #999;
  line-height: 1.2;
}

/* 无附件状态 */
.no-attachments {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  background-color: #f8f9fa;
  border: 2rpx dashed #e9ecef;
  border-radius: 8rpx;
}

.no-attachments-icon {
  font-size: 48rpx;
  color: #ccc;
  margin-bottom: 16rpx;
}

.no-attachments-text {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}



/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

/* 状态选项 */
.status-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-option {
  padding: 20rpx;
  border: 1rpx solid #e9ecef;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
}

.status-option.selected {
  background-color: #1890ff;
  color: #fff;
  border-color: #1890ff;
} 