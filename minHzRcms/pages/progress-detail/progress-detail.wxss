/* 进度详情页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 0 0 0;
}
.progress-info-section {
  background: #fff;
  border-radius: 18rpx;
  padding: 40rpx 0 28rpx 0;
  margin: 0 40rpx 32rpx 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.progress-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #42a5f5 0%, #1976d2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(25,118,210,0.10);
}
.progress-value {
  font-size: 44rpx;
  color: #fff;
  font-weight: 700;
}
.progress-unit {
  font-size: 26rpx;
  color: #e3f2fd;
  margin-left: 2rpx;
}
.progress-time {
  font-size: 22rpx;
  color: #888;
  margin-top: 4rpx;
}
.progress-content-card {
  background: #fff;
  border-radius: 14rpx;
  padding: 0;
  margin: 0 40rpx 32rpx 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: row;
  align-items: stretch;
}
.content-stripe {
  width: 10rpx;
  border-radius: 8rpx;
  background: linear-gradient(180deg, #1976d2 0%, #42a5f5 100%);
  margin: 32rpx 0 32rpx 0;
  flex-shrink: 0;
}
.progress-content-main {
  flex: 1;
  padding: 32rpx 32rpx 32rpx 28rpx;
  display: flex;
  flex-direction: column;
}
.progress-content-label {
  font-size: 24rpx;
  color: #1976d2;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.progress-content-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.7;
}
.attachments-area {
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 24rpx 32rpx 10rpx 32rpx;
  margin: 0 40rpx 18rpx 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}
.attachments-title {
  font-size: 22rpx;
  color: #1976d2;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.attachments-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}
.attachment-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.attachment-name {
  font-size: 20rpx;
  color: #555;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.attachment-link {
  font-size: 20rpx;
  color: #1976d2;
  margin-left: 18rpx;
  cursor: pointer;
}
.no-attachment {
  color: #bbb;
  font-size: 20rpx;
  text-align: center;
  padding: 24rpx 0 10rpx 0;
} 