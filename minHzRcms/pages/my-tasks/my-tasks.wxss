/* pages/my-tasks/my-tasks.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 统计区域 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #007AFF;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 筛选区域 */
.filter-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-tabs {
  display: flex;
  justify-content: space-around;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-tab.active {
  background-color: #007AFF;
  color: #fff;
  font-weight: 500;
}

/* 任务列表 */
.task-list {
  margin-bottom: 30rpx;
}

.task-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  min-height: 250rpx;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.task-status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.task-status.ongoing {
  background-color: #cce5ff;
  color: #004085;
}

.task-status.completed {
  background-color: #d4edda;
  color: #155724;
}

/* 任务信息 */
.task-info {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 12rpx;
  min-height: 40rpx;
  align-items: center;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
  line-height: 1.4;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

.priority-high {
  color: #dc3545;
  font-weight: 500;
}

.priority-medium {
  color: #ffc107;
  font-weight: 500;
}

.priority-low {
  color: #28a745;
  font-weight: 500;
}

.overdue {
  color: #dc3545;
  font-weight: 500;
}

/* 任务描述 */
.task-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 0;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

/* 操作按钮 */
.task-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  background-color: #f8f9fa;
  color: #007AFF;
  border: 2rpx solid #007AFF;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:active {
  background-color: #007AFF;
  color: #fff;
}

.action-btn.disabled {
  background-color: #f5f5f5;
  color: #ccc;
  border-color: #ddd;
  cursor: not-allowed;
}

.action-btn.disabled:active {
  background-color: #f5f5f5;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  color: #ccc;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 