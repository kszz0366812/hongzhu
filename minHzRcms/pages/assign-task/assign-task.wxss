/* pages/assign-task/assign-task.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 表单区域 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.input:focus {
  border-color: #007AFF;
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  resize: none;
  line-height: 1.4;
}

.picker {
  width: 100%;
}

.picker-text {
  width: 100%;
  min-height: 80rpx;
  padding: 24rpx 20rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333;
  line-height: 1.4;
  display: flex;
  align-items: center;
}

.picker-text.placeholder {
  color: #999;
}

/* 按钮区域 */
.button-section {
  margin-bottom: 30rpx;
}

.submit-btn {
  width: 100%;
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  background-color: #0056b3;
}

/* 预览区域 */
.preview-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 项目列表 */
.project-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.project-item {
  padding: 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.project-item:active {
  border-color: #007AFF;
  background-color: #f0f8ff;
}

.project-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.project-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.project-dates {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

/* 成员列表 */
.member-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  background-color: #fafafa;
  transition: all 0.3s ease;
  min-width: 160rpx;
}

.member-item:active {
  border-color: #007AFF;
  background-color: #f0f8ff;
}

.member-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #007AFF;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.member-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
}

/* 必填字段标记 */
.required {
  color: #dc3545;
  font-weight: bold;
} 