/* components/list-item-card/list-item-card.wxss */
.list-item-card {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
}

.card-content {
  cursor: pointer;
  transition: all 0.2s ease;
  border-radius: 8rpx;
  padding: 8rpx;
  position: relative;
  z-index: 10;
}

.card-content:active {
  background-color: #e0e0e0;
  transform: scale(0.98);
}

/* 标题行 */
.title-row {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-bottom: 24rpx; /* 增加底部边距 */
}

.title-section {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
  flex: 1;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.priority-label {
  font-size: 20rpx;
  color: #fff;
  margin-left: 8rpx;
  padding: 3rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 400;
  opacity: 0.7;
  filter: grayscale(20%);
}

.priority-label.high {
  background-color: #dc3545;
}

.priority-label.medium {
  background-color: #fd7e14;
}

.priority-label.low {
  background-color: #28a745;
}

.level-label {
  font-size: 20rpx;
  color: #fff;
  margin-left: 8rpx;
  padding: 3rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 400;
  opacity: 0.7;
  filter: grayscale(20%);
}

.level-label.jinji {
  background-color: #f8d7da;
  color: #721c24;
}

.level-label.zhongyao {
  background-color: #fff3cd;
  color: #856404;
}

.level-label.putong {
  background-color: #d1ecf1;
  color: #0c5460;
}

.level-label.changqi {
  background-color: #d4edda;
  color: #155724;
}

.top-label {
  font-size: 20rpx;
  color: #fff;
  margin-left: 8rpx;
  padding: 3rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 400;
  background-color: #ff6b6b;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
  100% {
    opacity: 1;
  }
}

.status-label {
  font-size: 20rpx;
  font-weight: 400;
  color: #666;
}

/* 信息区域 */
.info-section {
  margin-bottom: 24rpx; /* 增加底部边距 */
}

.info-row {
  display: flex;
  margin-bottom: 16rpx; /* 增加行间距 */
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 简介内容单独显示 */
.description-section {
  margin-bottom: 16rpx;
}

.description-content {
