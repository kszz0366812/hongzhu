/* 进度条 */
.progress-section {
  margin-bottom: 0;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
}

.progress-bar {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #007AFF, #4CAF50);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 项目成员 */
.members-section {
  margin: 20rpx 0 16rpx 0; /* 调整上下边距 */
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.members-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  user-select: none; /* 防止文本选择 */
}

.members-title-section {
  display: flex;
  align-items: center;
}

.members-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.members-count {
  font-size: 22rpx;
  color: #666;
  margin-left: 8rpx;
}

.expand-icon {
  font-size: 20rpx;
  color: #666;
  transition: transform 0.3s ease;
  pointer-events: none; /* 防止图标影响点击 */
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.members-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
  /* 默认不展开，高度为0 */
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.members-grid.expanded {
  /* 展开时显示所有行，设置足够大的高度 */
  max-height: 300rpx;
}

.member-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 80rpx;
  height: 90rpx;
  justify-content: flex-start;
  flex-shrink: 0;
}

.member-avatar {
  width: 48rpx;
  height: 48rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-bottom: 6rpx;
  flex-shrink: 0;
  border: 1rpx solid #e0e0e0;
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.member-name {
  font-size: 18rpx;
  color: #888;
  line-height: 1.2;
  max-width: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 0rpx;
  transform: scale(0.9);
  transform-origin: center;
  height: 24rpx;
  display: block;
}

/* 操作按钮 */
.actions-section {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx; /* 减少顶部边距 */
}

.action-btn {
  flex: 1;
  height: 64rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  color: #333;
  padding: 0 16rpx;
  min-height: 64rpx;
  box-sizing: border-box;
  overflow: hidden;
  flex-shrink: 0;
  white-space: nowrap;
  transition: all 0.2s ease;
}

.action-btn:active {
  background-color: #f5f5f5;
}

.action-btn.delete {
  color: #333;
  border-color: #e0e0e0;
  background-color: #fff;
}

.action-btn.disabled {
  background-color: #e9ecef;
  color: #adb5bd;
  border-color: #dee2e6;
  cursor: not-allowed;
  opacity: 0.6;
}

.action-btn.disabled:active {
  transform: none;
  box-shadow: none;
} 