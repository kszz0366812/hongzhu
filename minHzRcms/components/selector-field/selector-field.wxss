/* components/selector-field/selector-field.wxss */

.selector-field {
  width: 100%;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
  min-height: 80rpx;
  transition: border-color 0.2s ease, background-color 0.2s ease;
}

.selector-field:active {
  border-color: #007AFF;
  background-color: #f0f8ff;
}

.selector-field.disabled {
  background-color: #f5f5f5;
  border-color: #ddd;
  opacity: 0.6;
}

.selector-field.disabled:active {
  border-color: #ddd;
  background-color: #f5f5f5;
}

.selector-display {
  flex: 1;
  display: flex;
  align-items: center;
}

.selected-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  flex: 1;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.required-mark {
  color: #dc3545;
  font-weight: bold;
  margin-left: 8rpx;
}

.selector-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
  transform: rotate(90deg);
  transition: transform 0.3s ease;
}