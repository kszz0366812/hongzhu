/* components/action-buttons/action-buttons.wxss */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  width: 100%;
}

.create-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.create-btn.primary {
  background-color: #007AFF;
  color: #fff;
  border: 2rpx solid #007AFF;
}

.create-btn.secondary {
  background-color: #fff;
  color: #007AFF;
  border: 2rpx solid #007AFF;
}

.create-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
} 